<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!--  Font sizes (Fluent/Win10 style)  -->
    <sys:Double x:Key="FontSizeH1">24</sys:Double>
    <!--  Page title  -->
    <sys:Double x:Key="FontSizeH2">20</sys:Double>
    <!--  Section title  -->
    <sys:Double x:Key="FontSizeH3">16</sys:Double>
    <!--  Body title  -->
    <sys:Double x:Key="FontSizeH4">14</sys:Double>
    <!--  Body text  -->
    <sys:Double x:Key="FontSizeCaption">12</sys:Double>
    <!--  Hint/labels  -->

    <!--  Font weights  -->
    <FontWeight x:Key="FontWeightSemiBold">SemiBold</FontWeight>
    <FontWeight x:Key="FontWeightNormal">Normal</FontWeight>

    <!--  Optional: Font family  -->
    <FontFamily x:Key="FontFamilyDefault">Segoe UI</FontFamily>
    <!--  Font  -->
    <FontWeight x:Key="FontWeightBold">Bold</FontWeight>
</ResourceDictionary>
