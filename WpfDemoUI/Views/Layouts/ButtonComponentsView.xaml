<UserControl
    x:Class="WpfDemoUI.Views.Layouts.ButtonComponentsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfDemoUI.ViewModels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{DynamicResource BackgroundBrush}"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <local:ButtonComponentsViewModel />
    </UserControl.DataContext>

    <StackPanel Margin="16">
        <TextBlock
            Margin="0,0,0,16"
            FontSize="{DynamicResource  FontSizeH2}"
            FontWeight="{DynamicResource  FontWeightBold}"
            Text="Button Variants" />

        <WrapPanel
            Margin="0,0,0,16"
            HorizontalAlignment="Center"
            ItemHeight="50"
            ItemWidth="150">
            <Button
                Margin="4"
                Content="Primary"
                Style="{DynamicResource  PrimaryButtonStyle}" />
            <Button
                Margin="4"
                Content="Secondary"
                Style="{DynamicResource  SecondaryButtonStyle}" />
            <Button
                Margin="4"
                Content="Danger"
                Style="{DynamicResource  DangerButtonStyle}" />
            <Button
                Margin="4"
                Content="Outline"
                Style="{DynamicResource  OutlinedButtonStyle}" />
        </WrapPanel>

        <TextBlock Margin="0,12,0,4" Text="Generated XAML:" />
        <TextBox
            Height="120"
            Padding="8"
            AcceptsReturn="True"
            Background="#FFF0F0F0"
            BorderBrush="#CCC"
            FontFamily="Consolas"
            IsReadOnly="True"
            Text="{Binding GeneratedXaml, Mode=OneWay}"
            VerticalScrollBarVisibility="Auto" />

    </StackPanel>
</UserControl>
