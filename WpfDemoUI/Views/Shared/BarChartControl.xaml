<UserControl
    x:Class="WpfDemoUI.Views.Shared.BarChartControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WpfDemoUI.Helpers"
    x:Name="root">
    
    <UserControl.Resources>
        <local:ValueToHeightConverter
            x:Key="ValueToHeightConverter"
            MaxHeight="150"
            MaxValue="100" />
    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Title  -->
        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,10"
            FontSize="18"
            FontWeight="Bold"
            Text="{Binding Title, ElementName=root}" />

        <!--  Chart Area  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Y Axis  -->
            <ItemsControl Grid.Column="0" ItemsSource="{Binding YAxisLabels, ElementName=root}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel VerticalAlignment="Stretch" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock
                            Margin="0,5"
                            VerticalAlignment="Center"
                            Foreground="{DynamicResource PrimaryBrush}"
                            Text="{Binding}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!--  Bars  -->
            <ItemsControl Grid.Column="1" ItemsSource="{Binding ItemsSource, ElementName=root}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Bottom"
                            Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="8,0" VerticalAlignment="Bottom">
                            <TextBlock HorizontalAlignment="Center" Text="{Binding Value}" />
                            <Rectangle
                                Width="30"
                                Height="{Binding Value, Converter={StaticResource ValueToHeightConverter}}"
                                VerticalAlignment="Bottom"
                                Fill="{Binding FillColor}" />
                            <TextBlock
                                Margin="0,4,0,0"
                                HorizontalAlignment="Center"
                                Text="{Binding Label}" />
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>

        <!--  X Axis  -->
        <Border
            Grid.Row="2"
            Height="1"
            Margin="30,5,0,0"
            Background="Black" />

    </Grid>
</UserControl>
